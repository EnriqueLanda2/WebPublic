{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKER",
    "disableMixpacks": true
  },
  "builds": [
    {
      "src": "backend/Dockerfile",
      "use": "docker",
      "config": {
        "dockerfile": "backend/Dockerfile",
        "startCommand": "java -jar app.jar --spring.config.location=file:./railway-env.properties"
      }
    },
    {
      "src": "frontend/Dockerfile",
      "use": "docker",
      "config": {
        "dockerfile": "frontend/Dockerfile",
        "startCommand": "nginx -g 'daemon off;'"
      }
    }
  ],
  "routes": [
    {
      "src": "/cliente/(.*)",
      "dest": "/backend/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "deploy": {
    "startCommand": "echo 'Servicios iniciados correctamente'"
  }
}