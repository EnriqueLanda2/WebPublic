{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "echo 'Build personalizado'"
  },
  "services": [
    {
      "name": "backend",
      "sourcePath": "backend",
      "dockerfile": "backend/Dockerfile",
      "startCommand": "java -jar app.jar --spring.config.location=file:./railway-env.properties"
    },
    {
      "name": "frontend",
      "sourcePath": "frontend",
      "dockerfile": "frontend/Dockerfile",
      "startCommand": "nginx -g 'daemon off;'"
    }
  ],
  "routes": [
    {
      "src": "/cliente/(.*)",
      "dest": "/backend/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}