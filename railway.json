{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "docker"
  },
  "services": [
    {
      "name": "backend",
      "sourcePath": "backend",
      "dockerfile": "Dockerfile",
      "startCommand": "java -jar app.jar --spring.config.location=file:./railway-env.properties",
      "environment": {
        "PORT": "8080"
      }
    },
    {
      "name": "frontend",
      "sourcePath": "frontend",
      "dockerfile": "Dockerfile",
      "startCommand": "nginx -g 'daemon off;'",
      "environment": {
        "PORT": "80"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}